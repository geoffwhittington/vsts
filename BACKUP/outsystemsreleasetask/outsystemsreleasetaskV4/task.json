{
    "id": "77317352-4602-401c-ad6f-a7f437d4b953",
    "name": "outsystemsreleasetask",
    "friendlyName": "Outsystems Release Task",
    "description": "Outsystems Release Task",
    "helpMarkDown": "[More Information](https://aka.ms/outsystems)",
    "category": "Deploy",
    "visibility": [
        "Release"
    ],
    "author": "Jo√£o Almeida",
    "version": {
        "Major": 4,
        "Minor": 0,
        "Patch": 0
    },
    "demands": [],
    "minimumAgentVersion": "1.99.0",
    "groups": [
        {
            "name": "osplatform",
            "displayName": "Outsystems Platform",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "outsystemsServiceEndpoint",
            "type": "connectedService:Outsystems",
            "label": "Outsystems Service Connection",
            "helpMarkDown": "Select a Outsystems service connection.",
            "groupName": "osplatform"
        },
        {
            "name": "outsystemsApplication",
            "type": "filePath",
            "label": "Application",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the application to deploy.",
            "groupName": "osplatform"
        },
        {
            "name": "outsystemsSourceEnvironment",
            "type": "pickList",
            "label": "Source Environment",
            "defaultValue": "Development",
            "required": true,
            "options": {
                "development": "Development",
                "quality": "Quality",
                "production": "Production"
            },
            "helpMarkDown": "Select the source environment for this deployment.",
            "groupName": "osplatform"
        },
        {
            "name": "outsystemsTargetEnvironment",
            "type": "pickList",
            "label": "Target Environment",
            "defaultValue": "",
            "required": true,
            "options": {
                "development": "Development",
                "quality": "Quality",
                "production": "Production"
            },
            "helpMarkDown": "Select the target environment for this deployment.",
            "groupName": "osplatform"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "azureContainerRegistry",
            "endpointId": "$(azureSubscriptionEndpoint)",
            "dataSourceName": "AzureRMContainerRegistries",
            "resultTemplate": "{\"Value\":\"{\\\"loginServer\\\":\\\"{{{properties.loginServer}}}\\\", \\\"id\\\" : \\\"{{{id}}}\\\"}\",\"DisplayValue\":\"{{{name}}}\"}"
        }
    ],
    "instanceNameFormat": "Deploy Outsystems $(outsystemsServiceEndpoint)",
    "execution": {
        "Node": {
            "target": "ostask.js"
        }
    },
    "messages": {
        "OSNotDetected": "Outsystems Platform not detected (unable to reach url)",
        "OSFailed": "Outsystems failed with error: %s"
    }
}