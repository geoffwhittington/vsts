{
    "id": "dc81d3d1-de91-4433-ad96-b1c83e7ba74f",
    "name": "outsystems-task",
    "friendlyName": "Outsystems Release Task",
    "description": "Deploy your Outsystems Applications with a Deployment Plan",
    "helpMarkDown": "[More Information](https://aka.ms/outsystems)",
    "category": "Deploy",
    "visibility": [
        "Release"
    ],
    "author": "Jo√£o Almeida",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 57
    },
    "demands": [],
    "minimumAgentVersion": "1.99.0",
    "inputs": [
        {
            "name": "outsystemsServiceEndpoint",
            "type": "connectedService:Outsystems",
            "label": "Outsystems Service Connection",
            "required": true,
            "helpMarkDown": "Select a Outsystems service connection."
        },
        {
            "name": "outsystemsApplication",
            "type": "pickList",
            "label": "Application",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select one or more Outsystems applications to deploy. [Learn more.](https://aka.ms/outsystems)",
            "properties": {
                "MultiSelectFlatList": "True",
                "DisableManageLink": "True",
                "EditableOptions": "false",
                "PopulateDefaultValue": "true"
            }
        },
        {
            "name": "outsystemsTagAndDeploy",
            "type": "boolean",
            "label": "Tag and Deploy",
            "defaultValue": true,
            "required": true,
            "helpMarkDown": "Should the task create a new Outsystems Deployment Plan?"
        },
        {
            "name": "outsystemsAppVersionName",
            "type": "string",
            "label": "Application Version",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Outsystems Application Version. Supported format is [Major].[Minor](.[Revision]). Consider taking advantage of VSTS variables like $(Release.ReleaseName) that you can define in General tab. Example: 0.0.$(rev:rr)",
            "properties": {
                "resizable": "true",
                "rows": "4"
            }
        },
        {
            "name": "outsystemsDeployPlanChangeLog",
            "type": "string",
            "label": "Change Log",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Outsystems Application Version.",
            "properties": {
                "resizable": "true",
                "rows": "4"
            }
        },
        {
            "name": "outsystemsDeployNotes",
            "type": "string",
            "label": "Deploy Notes",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Outsystems Deployment Plan Notes.",
            "properties": {
                "resizable": "true",
                "rows": "4"
            }
        },
        {
            "name": "outsystemsSourceEnvironment",
            "type": "pickList",
            "label": "Source Environment",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the source environment for this deployment."
        },
        {
            "name": "outsystemsTargetEnvironment",
            "type": "pickList",
            "label": "Target Environment",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the target environment for this deployment."
        }
    ],
    "dataSourceBindings": [
        {
            "target": "outsystemsApplication",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "OSLifetimeApps",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        },
        {
            "target": "outsystemsExistingAppVersion",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "OSLifetimeAppsVersions",
            "parameters": {
                "outsystemsApplication": "$(outsystemsApplication)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Version}}}\" }"
        },
        {
            "target": "outsystemsSourceEnvironment",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "osLifetimeEnvironments",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        },
        {
            "target": "outsystemsTargetEnvironment",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "osLifetimeEnvironments",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        }
    ],
    "instanceNameFormat": "Deploy Outsystems App(s)",
    "execution": {
        "Node": {
            "target": "ostask.js"
        }
    },
    "messages": {
        "OSAppVersionAlreadyExists": "The version '%s' of application '%s' already exists. Insert a new version.",
        "OSFailureAppNotModified": "The appication '%s' was not modified. Maybe syncronizing you environment will do.",
        "OSSuccessfulDeployment": "Deployment complete. Outsystems Status: %s.",
        "OSFailedDeployment": "Deployment unsuccessful. Check loggin and/or Outsystems Lifetime console",
        "OSUnabletoMonitorProgress": "Unable to monitor Outsystems Lifetime Deployment progress. Last known state: %s.",
        "OSNotDetected": "Outsystems Platform not detected (unable to reach url)",
        "OSFailed": "Outsystems failed with error: %s",
        "succeeded": "succeeded",
        "failed": "failed",
        "aborted": "aborted",
        "unknown": "unknown"
    }
}