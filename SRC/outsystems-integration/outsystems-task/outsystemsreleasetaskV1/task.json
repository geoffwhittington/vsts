{
    "id": "dc81d3d1-de91-4433-ad96-b1c83e7ba74f",
    "name": "outsystems-task",
    "friendlyName": "Outsystems Release Task",
    "description": "Deploy your Outsystems Applications with a Deployment Plan",
    "helpMarkDown": "[More Information](https://aka.ms/outsystems)",
    "category": "Deploy",
    "visibility": [
        "Release"
    ],
    "author": "Jo√£o Almeida",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 11
    },
    "demands": [],
    "minimumAgentVersion": "1.99.0",
    "inputs": [
        {
            "name": "outsystemsServiceEndpoint",
            "type": "connectedService:Outsystems",
            "label": "Outsystems Service Connection",
            "required": true,
            "helpMarkDown": "Select a Outsystems service connection."
        },
        {
            "name": "outsystemsDeployPlanOption",
            "type": "boolean",
            "label": "New Deploy Plan?",
            "defaultValue": false,
            "required": true,
            "helpMarkDown": "Should the task create a new Outsystems Deployment Plan?"
        },
        {
            "name": "outsystemsExistingDeployPlan",
            "type": "pickList",
            "label": "Existing Plan",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The name of the existing Outsystems Deployment Plan to be created.",
            "visibleRule": "outsystemsDeployPlanOption = false"
        },
        {
            "name": "outsystemsApplication",
            "type": "pickList",
            "label": "Application",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select one or more Outsystems applications to deploy. [Learn more.](https://aka.ms/outsystems)",
            "properties": {
                "MultiSelectFlatList": "True",
                "DisableManageLink": "True",
                "EditableOptions": "false",
                "PopulateDefaultValue": "true"
            },
            "visibleRule": "outsystemsDeployPlanOption = true"
        },
        {
            "name": "outsystemsDeployNotes",
            "type": "string",
            "label": "Deploy Notes",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Outsystems Deployment Plan Notes.",
            "properties": {
                "resizable": "true",
                "rows": "4"
            },
            "visibleRule": "outsystemsDeployPlanOption = true"
        },
        {
            "name": "outsystemsSourceEnvironment",
            "type": "pickList",
            "label": "Source Environment",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the source environment for this deployment.",
            "visibleRule": "outsystemsDeployPlanOption = true"
            //"groupName": "os-new-deploy-plan"
        },
        {
            "name": "outsystemsTargetEnvironment",
            "type": "pickList",
            "label": "Target Environment",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the target environment for this deployment.",
            "visibleRule": "outsystemsDeployPlanOption = true"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "outsystemsApplication",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "OSLifetimeApps",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        },
        {
            "target": "outsystemsExistingDeployPlan",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "osLifetimeDeployments",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Notes}}}\" }"
        },
        {
            "target": "outsystemsSourceEnvironment",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "osLifetimeEnvironments",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        },
        {
            "target": "outsystemsTargetEnvironment",
            "endpointId": "$(outsystemsServiceEndpoint)",
            "dataSourceName": "osLifetimeEnvironments",
            "parameters": {
                "OutsystemsEndpoint": "$(outsystemsServiceEndpoint)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{Key}}}\", \"DisplayValue\" : \"{{{Name}}}\" }"
        }
    ],
    "instanceNameFormat": "Deploy Outsystems App(s)",
    "execution": {
        "Node": {
            "target": "ostask.js"
        }
    },
    "messages": {
        "OSNotDetected": "Outsystems Platform not detected (unable to reach url)",
        "OSFailed": "Outsystems failed with error: %s"
    }
}